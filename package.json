{
    "name": "@nodebb/nodebb-theme-community",
    "version": "1.1.0",
    "description": "The Persona-variant theme for the forum at https://community.nodebb.org",
    "main": "lib/theme.js",
    "keywords": [],
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged",
            "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "bent": "^7.3.12",
        "jsdom": "^19.0.0",
        "node-fetch": "^2"
    },
    "devDependencies": {
        "@commitlint/cli": "17.7.0",
        "@commitlint/config-angular": "17.7.0",
        "eslint": "8.46.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-plugin-import": "2.28.0",
        "husky": "8.0.3",
        "lint-staged": "13.2.3"
    }
}
